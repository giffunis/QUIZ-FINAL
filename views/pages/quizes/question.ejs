<!-- views/pages/quizes/question.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../../partials/head %>
</head>
<body class="container">

  <div id="page-wrap">

    <header class="main" id="h1">
      <% include ../../partials/header %>
    </header>

    <nav class="main" id="n1" role="navigation">
      <% include ../../partials/nav %>
    </nav>

    <section class="main" id="s1">
      <h3>Quiz: el juego de las preguntas</h3>
      <form method="get" action="/quizes/answer">
        <p>Pregunta: <%- pregunta.enunciado %></p>
        <% if(pregunta.tipo === 'PLarga' || pregunta.tipo === 'PCorta'){ %>
          <%- pregunta.entrada %>
        <%}else if(pregunta.tipo === 'PSSimple'){ %>
          <% include ../../partials/preguntas/pSimple %>
        <% } else{ %>
          <% include ../../partials/preguntas/pMultiple %>
        <% } %>
        <input type="submit" value="Enviar">
      </form>
    </section>

    <footer class="main" id="f1">
        <% include ../../partials/footer %>
    </footer>

  </div> <!-- id="page-wrap-->"

</body>
</html>

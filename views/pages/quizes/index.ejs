<!-- views/pages/quizes/question.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../../partials/head %>
</head>
<body class="container">

  <div id="page-wrap">

    <header class="main" id="h1">
      <% include ../../partials/header %>
    </header>

    <nav class="main" id="n1" role="navigation">
      <% include ../../partials/nav %>
    </nav>

    <section class="main" id="s1">
      <h3>Preguntas de la BBDD</h3>
      <% if(quizes != null){ %>
        <ul>
          <% for(var i = 0; i < quizes.length; i++){ %>
            <li> Pregunta <%= i + 1 %>: <a href="/quizes/<%= quizes[i].id %>"><%- quizes[i].pregunta %></a>
              <a href="/quizes/<%= quizes[i].id %>/edit"><button>editar</button></a>
              <form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">
                <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">borrar</button>
              </form></li>
          <% } %>
        </ul>
      <% } %>
      <a href="/quizes/new"><button type="button">Crear pregunta</button></a>
    </section>

    <footer class="main" id="f1">
        <% include ../../partials/footer %>
    </footer>

  </div> <!-- id="page-wrap-->"

</body>
</html>

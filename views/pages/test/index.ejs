<!-- views/pages/quizes/question.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../../partials/head %>
</head>
<body class="container">

  <div id="page-wrap">

    <header class="main" id="h1">
      <% include ../../partials/header %>
      <script src="/javascripts/test.js"></script>
    </header>

    <% include ../../partials/nav %>

    <section class="main" id="preguntas">
      <h3>Preguntas de la BBDD</h3>
      <% if(quizes != null){ %>
        <ul>
          <% for(var i = 0; i < quizes.length; i++){ %>
            <li> Pregunta <%= i + 1 %>: <a href="/quizes/<%= quizes[i].id %>"><%- quizes[i].pregunta %></a></li>
          <% } %>
        </ul>
      <% } %>
      <button type="button" name="btnStart" id="btnStart">Start</button>
    </section>

    <section class="main" id="pregunta" style="display:none">
       Pregunta
    </section>

    <section class="main" id="contador">
       Tiempo: <span id="minutos">00</span>:<span id="segundos">00</span>
    </section>

    <footer class="main" id="f1">
        <% include ../../partials/footer %>
    </footer>

  </div> <!-- id="page-wrap-->

</body>
</html>
